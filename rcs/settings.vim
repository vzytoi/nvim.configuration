set wildignore+=*/.git/*
set autochdir
set lazyredraw
filetype indent plugin on
syntax on
syntax enable
let mapleader = " "
set nowrap
set scrolloff=8
set mouse=a
set wildmenu
set wildmode=longest:full,list:full
" remove bells
set vb t_vb=
" allow backspacing over everything in insert mode
set backspace=indent,eol,start
